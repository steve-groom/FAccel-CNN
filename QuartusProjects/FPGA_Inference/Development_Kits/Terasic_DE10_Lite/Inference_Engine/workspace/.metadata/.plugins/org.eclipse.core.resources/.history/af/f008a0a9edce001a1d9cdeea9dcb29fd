#include "sys/alt_stdio.h"
#include "system.h"
#include <io.h>
#include <unistd.h>

alt_u16 kernel[9] = {0x30f8, 0x0, 0x0, 0x0, 0x0, 0x0, 0x0, 0x0, 0x3f80};

void convolution (alt_u32 source, alt_u32 dest, alt_u32 words, alt_u32 kernel, alt_u8 xres_sel, alt_u8 pad) {
	IOWR_32DIRECT(CONVOLUTION_0_BASE, 1, ((xres_sel & 0x7) << 3) | (pad & x7));
	IOWR_32DIRECT(CONVOLUTION_0_BASE, 2, source);
	IOWR_32DIRECT(CONVOLUTION_0_BASE, 3, words);
	IOWR_32DIRECT(CONVOLUTION_0_BASE, 4, dest);
	IOWR_32DIRECT(CONVOLUTION_0_BASE, 5, kernel);
	IOWR_32DIRECT(CONVOLUTION_0_BASE, 0, 1);	// go!
}

int main()
{ 
  alt_putstr("Hello from Nios II!\n");

  convolution (0x0, 0x200, 0x20, kernel, 2, 1);

  /* Event loop never exits. */
  while (1) {
	  IOWR_32DIRECT(LED_BASE, 0, 0);
	  usleep(250000);
	  IOWR_32DIRECT(LED_BASE, 0, 1);
	  usleep(250000);
  }

  return 0;
}
